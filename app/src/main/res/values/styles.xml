<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Rounded">
        <item name="cornerRadius">@dimen/button_rounded_radius</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/padding_three_quarter</item>
        <item name="android:paddingBottom">@dimen/padding_three_quarter</item>
    </style>

    <style name="ElevensAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertNegativeButton</item>
    </style>

    <style name="AlertPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AlertNegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>